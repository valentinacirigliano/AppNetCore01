@using AppNetCore01.Web.ViewModels;
@model IEnumerable<ProductoListVm>;
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="~/css/estilos.css">
<div class="container">
    <div class="row w-90">
        <div class="col-6">
            <h2>Lista de Productos</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Nuevo Producto
            </a>
        </div>
    </div>
    <table id="tblProductos" class="table table-bordered w-90">
        <thead>
            <tr>

                <th>Descripcion</th>
                <th>Codigo</th>
                <th>Marca</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>



@section Scripts{
    <script src="~/js/producto.js"></script>

}



